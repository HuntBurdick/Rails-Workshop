<%= render :partial => 'admin/template/form_errors', :object => @user %>

<%= simple_form_for @user, :url => url_for(:controller => 'admin/users', :action => 'update'), :method => 'put', :html => { :role => "form" } do |form| %>

	<%= render :partial => 'form', :object => form %>
	
	<%= submit_tag 'Submit', :class => 'btn btn-primary' %>

<% end %>